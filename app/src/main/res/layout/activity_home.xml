<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/iconTicket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:elevation="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/iconStation"
        app:layout_constraintEnd_toStartOf="@+id/iconSeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_style_black_24dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/textTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:text="Booking"
        android:textColor="@color/Text"
        tools:layout_editor_absoluteX=""
        app:layout_constraintEnd_toEndOf="@+id/iconTicket"
        app:layout_constraintTop_toBottomOf="@+id/iconTicket"
        android:layout_marginRight="25dp" />

    <ImageButton
        android:id="@+id/iconSeat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/iconLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconTicket"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_event_seat_black_24dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/textSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="Seat Availability"
        android:textColor="@color/Text"
        app:layout_constraintStart_toStartOf="@+id/iconSeat"
        app:layout_constraintTop_toBottomOf="@+id/iconSeat"
        android:layout_marginLeft="3dp" />

    <ImageButton
        android:id="@+id/iconStation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconTicket"
        app:srcCompat="@drawable/ic_train_black_24dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/textStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="12dp"
        android:text="Stations"
        android:textColor="@color/Text"
        app:layout_constraintEnd_toEndOf="@+id/iconStation"
        app:layout_constraintTop_toBottomOf="@+id/iconStation"
        android:layout_marginRight="28dp" />

    <ImageButton
        android:id="@+id/iconLogout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconStation"
        app:layout_constraintTop_toBottomOf="@+id/iconSeat"
        app:srcCompat="@drawable/ic_person_black_24dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="12dp"
        android:text="Logout"
        android:textColor="@color/Text"
        app:layout_constraintEnd_toEndOf="@+id/iconLogout"
        app:layout_constraintTop_toBottomOf="@+id/iconLogout"
        android:layout_marginRight="28dp" />
</android.support.constraint.ConstraintLayout>