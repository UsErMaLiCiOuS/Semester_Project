<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/iconTicket"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="110dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:elevation="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textTicket"
        app:layout_constraintEnd_toStartOf="@+id/iconStation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ticket" />

    <TextView
        android:id="@+id/textTicket"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="25dp"
        android:text="Booking"
        android:textColor="@color/Text"
        app:layout_constraintBottom_toTopOf="@+id/iconLogout"
        app:layout_constraintEnd_toStartOf="@+id/textStation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconTicket"
        tools:textSize="22dp" />


    <ImageButton
        android:id="@+id/iconStation"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="80dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textStation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconTicket"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/train" />

    <TextView
        android:id="@+id/textStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="291dp"
        android:layout_marginEnd="61dp"
        android:text="Stations"
        android:textColor="@color/Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textTicket"
        app:layout_constraintTop_toBottomOf="@+id/iconStation"
        tools:textSize="22dp" />

    <ImageButton
        android:id="@+id/iconLogout"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="291dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="140dp"
        android:text="Logout"
        android:textColor="@color/Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iconLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconLogout"
        tools:textSize="22dp" />
</android.support.constraint.ConstraintLayout>