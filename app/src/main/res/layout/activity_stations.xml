<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/material_blue_grey_50"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinnerStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/stationList"
        android:prompt="@string/station_prompt"
        android:popupBackground="@color/Text"/>

    <Spinner
        android:id="@+id/spinnerSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="@color/Text"/>


    <Button
        android:id="@+id/station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submitStation"
        android:textColor="@color/Text" />

</LinearLayout>